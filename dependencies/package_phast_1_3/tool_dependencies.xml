<?xml version="1.0"?>
<tool_dependency>
  <package name="clapack" version="3.2.1">
    <repository prior_installation_required="True" toolshed="http://gigatoolshed.net" owner="peterli" name="package_clapack_3_2_1" changeset_revision="" />
  </package>

  <package name="phast" version="1.3">
    <install version="1.0">
      <actions>
        <!-- Download source code -->
        <action type="download_by_url" target_filename="phast-1.3.tar.gz">http://compgen.bscb.cornell.edu/phast/downloads/phast.v1_3.tgz</action>

        <!-- Get CLAPACKPATH from clapack package -->
        <action type="set_environment_for_install">
          <repository toolshed="http://gigatoolshed.net" owner="peterli" name="package_clapack_3_2_1" changeset_revision="">
            <package name="clapack" version="3.2.1" />
          </repository>
        </action>

        <!-- Build phast -->
        <action type="change_directory">src</action>
        <action type="shell_command">make</action>
        <action type="change_directory">..</action>

        <!-- Install phast -->
        <action type="shell_command">cp -R bin $INSTALL_DIR</action>

        <!-- Set environment for dependent repositories -->
        <action type="set_environment">
          <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin</environment_variable>
        </action>
      </actions>
    </install>
  </package>
</tool_dependency>
